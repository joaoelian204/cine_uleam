# Configuración de npm para mejorar la estabilidad en Netlify
registry=https://registry.npmjs.org/

# Timeouts y reintentos más agresivos
fetch-timeout=600000
fetch-retries=10
fetch-retry-factor=2
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=120000

# Configuraciones de red más permisivas
maxsockets=50
network-timeout=300000
network-concurrency=1

# Configuraciones adicionales para compatibilidad
legacy-peer-deps=true
audit=false
fund=false
update-notifier=false

# Configuraciones de caché optimizadas
cache-min=604800
prefer-online=true

# Configuraciones para CI/CD
ci=true
loglevel=warn

# Deshabilitar scripts problemáticos
ignore-scripts=false

# Configuraciones para evitar problemas de red
prefer-online=true
prefer-dedupe=true